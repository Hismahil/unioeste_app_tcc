<div class="row">
	<div class="col-sm-4"></div>	
	<div class="col-sm-4">
		<%= form_tag sessions_path, class: 'form-horizontal' do %>
			<div class="panel panel-default">
				<div class="panel-body">
					<div class="form-group col-sm-12">
				  	<%= label_tag :email, nil, class: 'control-label' %><br />
				    <%= text_field_tag :email, params[:email], class: 'form-control' %>
				  </div>
				  
				  <div class="form-group col-sm-12">
				  	<%= label_tag :password, nil, class: 'control-label' %><br />
				    <%= password_field_tag :password, nil, class: 'form-control' %>
				  </div>
				</div>
				<div class="panel-footer"><%= submit_tag "Log in", class: 'btn btn-success' %></div>
			</div>
		<% end %>
	</div>
	<div class="col-sm-4"></div>
</div>